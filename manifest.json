{
  "manifest_version": 2,

  "name": "Events Crawler",
  "description": "Crawls events from the different URLs",
  "version": "1.0",

  "background": {
    "persistent": true,
    "scripts": ["bg.js"]
  },

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }, 

  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}